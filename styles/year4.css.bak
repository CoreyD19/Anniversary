@import url('base.css');
@import url('year1.css');
@import url('year2.css'); 
@import url('year3.css');

/* Puzzle Section */
.puzzle-section {
  background-color: #292929;
  padding: 2rem;
  border-radius: 10px;
  box-shadow: 0 4px 12px rgba(255, 110, 199, 0.2);
  margin-bottom: 2rem;
}

.puzzle-section h2 {
  text-align: center;
  color: #ffb6e6;
  margin-bottom: 1rem;
}

.puzzle-section p {
  text-align: center;
  margin-bottom: 1.5rem;
  font-size: 1rem;
  color: #ffcce6;
}

#puzzle-container {
  display: grid;
  grid-template-columns: repeat(4, 100px);
  grid-gap: 5px;
  justify-content: center;
  margin-bottom: 1rem;
}

.tile {
  width: 100px;
  height: 100px;
  overflow: hidden;
  border-radius: 8px;
  border: 2px solid #ffb6e6;
  cursor: grab;
  position: relative;
}

#puzzle-result {
  text-align: center;
  font-weight: bold;
  font-size: 1.1rem;
}

#generatePuzzleBtn {
  background-color: #ff6ec7;
  color: white;
  padding: 12px 24px;
  border: none;
  border-radius: 30px;
  font-size: 1.1rem;
  font-weight: bold;
  box-shadow: 0 4px 15px rgba(255, 110, 199, 0.3);
  cursor: pointer;
  transition: all 0.3s ease;
}

#generatePuzzleBtn:hover {
  background-color: #ff85d0;
  transform: scale(1.05);
  box-shadow: 0 6px 20px rgba(255, 110, 199, 0.5);
}
.puzzle-grid {
  display: grid;
  grid-template-columns: repeat(4, 100px);
  grid-gap: 5px;
  justify-content: center;
  margin-bottom: 1rem;
}
.tile-img {
  width: 400px;
  height: 400px;
  object-fit: cover;
  pointer-events: none;
}

@keyframes floatDown {
  0% {
    transform: translateY(0) scale(1);
    opacity: 0.9;
  }
  100% {
    transform: translateY(100vh) scale(1.4);
    opacity: 0;
  }
}

.heart-confetti {
  animation: floatDown 3s ease-out forwards;
  pointer-events: none;
  z-index: 9999;
}

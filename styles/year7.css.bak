.bingo-section {
  background-color: #292929;
  padding: 2rem 1rem;
  border-radius: 10px;
  box-shadow: 0 4px 12px rgba(255, 110, 199, 0.2);
  margin: 2rem auto;
  max-width: 600px;
  text-align: center;
  width: 90%;
}

.bingo-section h2 {
  color: #ffb6e6;
  margin-bottom: 0.5rem;
  font-size: 1.8rem;
}

.bingo-section p {
  color: #ffcce6;
  font-size: 1rem;
  margin-bottom: 1rem;
}

.bingo-section button {
  padding: 0.6rem 1rem;
  background-color: #e38ea0;
  border: none;
  color: white;
  font-size: 1rem;
  border-radius: 8px;
  cursor: pointer;
  margin: 0.5rem;
  transition: background-color 0.3s ease;
}

.bingo-section button:hover {
  background-color: #d46c8b;
}

#bingo-board {
  border-collapse: collapse;
  margin: 1rem auto;
  width: 100%;
  max-width: 500px;
  table-layout: fixed;
}

#bingo-board td {
  width: 20%;
  height: 60px;
  border: 1px solid #ffb6e6;
  color: #ffcce6;
  text-align: center;
  vertical-align: middle;
  padding: 0.5rem;
  font-size: 0.9rem;
  background-color: #1e1e1e;
  transition: background-color 0.3s;
  cursor: default;
  word-wrap: break-word;
}

#bingo-board td.marked {
  background-color: #a4dcbe;
  color: #000;
  font-weight: bold;
}

.drawn-prompt {
  margin-top: 1rem;
  font-size: 1.2rem;
  color: #ffd1ec;
  text-align: center;
}

.confetti {
  position: fixed;
  top: 0;
  font-size: 24px;
  animation: fall 3s ease-out forwards;
  pointer-events: none;
  z-index: 9999;
}

@keyframes fall {
  0% {
    transform: translateY(-100px) rotate(0deg);
    opacity: 1;
  }
  100% {
    transform: translateY(800px) rotate(720deg);
    opacity: 0;
  }
}

/* Mobile styles */
@media screen and (max-width: 600px) {
  .bingo-section {
    padding: 1.5rem 0.75rem;
  }

  #bingo-board td {
    height: 50px;
    font-size: 0.75rem;
    padding: 0.3rem;
  }

  .bingo-section h2 {
    font-size: 1.5rem;
  }

  .drawn-prompt {
    font-size: 1rem;
  }
}
